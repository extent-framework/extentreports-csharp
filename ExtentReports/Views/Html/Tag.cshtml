@using RazorEngine
@using RazorEngine.Templating

<!DOCTYPE html>
<html>
@Include("Head")
<body class="attributes-view">
    <div class="app">
        <div class="layout">
            @Include("Navbar")
            @Include("Sidenav")
            <div class="page-container">
                <div class="main-content">
                    <div class="avt-container row">
                        <div class="test-list">
                            <div class="test-list-tools">
                                <ul class="tools pull-left">
                                    <li>
                                        <a href="">
                                            <span>Tags</span>
                                        </a>
                                    </li> 
                                </ul>
								<ul class="tools text-right">
                                    <li>
                                        <a href="#">
                                            <span class="badge badge-primary">@Model.CategoryContext.Context.Count</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="avt-wrapper scrollable">
                                <ul id="test-list-item" class="test-list-item">
                                	@foreach (var category in Model.CategoryContext.Context)
									{
										@Include("AttributesView", category)
                                    }
                                </ul>    
                            </div>
                        </div>
                        <div class="test-content scrollable"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
	@Include("Scripts")
</body>
</html>